@{
    ViewBag.Title = "Verify OTP";
    var email = ViewBag.Email as string;
}
<h2>Verify OTP</h2>
@if (TempData["Flash"] != null)
{
    <p>@TempData["Flash"]</p>
}
@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

<form asp-action="VerifyOtp" method="post">
    <input type="hidden" name="email" value="@email" />
    <input name="otp" placeholder="Enter 6-digit OTP" required />
    <button type="submit">Verify</button>
</form>

<form asp-action="ResendOtp" method="post" style="margin-top:12px">
    <input type="hidden" name="email" value="@email" />
    <button type="submit">Resend OTP</button>
</form>
