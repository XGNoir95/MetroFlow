@model MetroFlow.Models.Video

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title + " - MetYube";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<style>
    @@keyframes float1 {
        0%, 100% {
            transform: translateY(0px) translateX(0px) scale(1);
            opacity: 0.3;
        }

        25% {
            transform: translateY(-20px) translateX(10px) scale(1.1);
            opacity: 0.6;
        }

        50% {
            transform: translateY(-10px) translateX(-15px) scale(0.9);
            opacity: 0.4;
        }

        75% {
            transform: translateY(-30px) translateX(5px) scale(1.05);
            opacity: 0.7;
        }
    }

    .floating-circle-1 {
        animation: float1 8s ease-in-out infinite;
    }

    .floating-circle-2 {
        animation: float1 10s ease-in-out infinite 2s;
    }
</style>

<!-- Back Button -->
<div class="absolute top-4 left-4 z-50">
    <a asp-action="MetYube" class="flex items-center space-x-2 px-4 py-2 bg-opacity-90 hover:bg-opacity-100 lg:text-white sm:text-green-700 md:text-green-700 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 backdrop-blur-sm">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span class="font-medium">Back to Videos</span>
    </a>
</div>

<!-- Video Detail Section -->
<section class="min-h-screen bg-gradient-to-b from-green-50 to-white py-8 relative overflow-hidden">
    <!-- Floating circles -->
    <div class="floating-circle-1 absolute top-20 right-16 w-16 h-16 bg-green-300 rounded-full opacity-20 blur-sm"></div>
    <div class="floating-circle-2 absolute bottom-40 left-20 w-12 h-12 bg-green-200 rounded-full opacity-15 blur-sm"></div>

    <div class="max-w-8xl lg: mx-40 px-6 py-8 relative z-10">
        <!-- Video player -->
        <div class="bg-gray-900 rounded-xl shadow-2xl overflow-hidden mb-8 border-2 border-green-700">
            <iframe src="@Model.Url.Replace("watch?v=", "embed/")"
                    class="w-full h-96"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
            </iframe>
        </div>

        <!-- Video Information -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <h1 class="text-3xl font-bold text-gray-800 mb-4">@Model.Title</h1>

                <div class="flex items-center gap-4 mb-6">
                    <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                        @Model.Category
                    </span>
                    <span class="text-gray-500 text-sm">
                        <i class="fas fa-clock mr-1"></i>Posted recently
                    </span>
                </div>

                <div class="bg-white rounded-xl p-6 shadow-md mb-8">
                    <h3 class="text-xl font-semibold text-gray-800 mb-3">Description</h3>
                    <p class="text-gray-700 leading-relaxed">@Model.Description</p>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-wrap gap-4 mb-8">
                    <button class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2">
                        <i class="fas fa-share"></i> Share
                    </button>
                    <button class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors flex items-center gap-2">
                        <i class="fas fa-download"></i> Download
                    </button>
                    <button class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors flex items-center gap-2">
                        <i class="fas fa-bookmark"></i> Save
                    </button>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Video Info Card -->
                <div class="bg-green-50 rounded-xl p-6 shadow-md border border-green-200">
                    <h3 class="text-xl font-semibold text-green-800 mb-4">Video Details</h3>
                    <div class="space-y-3 text-gray-700">
                        <div class="flex justify-between">
                            <span class="font-medium">Category:</span>
                            <span class="text-green-700">@Model.Category</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="font-medium">Duration:</span>
                            <span>15:30</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="font-medium">Views:</span>
                            <span>1.2K</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="font-medium">Uploaded:</span>
                            <span>2 days ago</span>
                        </div>
                        <div class="pt-3 border-t border-green-200">
                            <a href="@Model.Url" target="_blank" class="flex items-center justify-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                                <i class="fab fa-youtube"></i> Watch on YouTube
                            </a>
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
</section>