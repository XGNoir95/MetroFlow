@{
    Layout = "_Layout";
    ViewData["Title"] = "Login - MetroFlow";
    ViewData["HideLayoutParts"] = true;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<style>
    @@keyframes float1 {
        0%, 100% {
            transform: translateY(0px) translateX(0px) scale(1);
            opacity: 0.3;
        }

        25% {
            transform: translateY(-20px) translateX(10px) scale(1.1);
            opacity: 0.6;
        }

        50% {
            transform: translateY(-10px) translateX(-15px) scale(0.9);
            opacity: 0.4;
        }

        75% {
            transform: translateY(-30px) translateX(5px) scale(1.05);
            opacity: 0.7;
        }
    }

    @@keyframes float2 {
        0%, 100% {
            transform: translateY(0px) translateX(0px) scale(0.8);
            opacity: 0.2;
        }

        33% {
            transform: translateY(-25px) translateX(-20px) scale(1.2);
            opacity: 0.5;
        }

        66% {
            transform: translateY(-5px) translateX(25px) scale(0.7);
            opacity: 0.3;
        }
    }

    @@keyframes float3 {
        0%, 100% {
            transform: translateY(0px) translateX(0px) scale(1.1);
            opacity: 0.4;
        }

        40% {
            transform: translateY(-15px) translateX(-10px) scale(0.9);
            opacity: 0.6;
        }

        80% {
            transform: translateY(-35px) translateX(15px) scale(1.3);
            opacity: 0.2;
        }
    }

    @@keyframes float4 {
        0%, 100% {
            transform: translateY(0px) translateX(0px) scale(0.9);
            opacity: 0.3;
        }

        30% {
            transform: translateY(-20px) translateX(20px) scale(1.1);
            opacity: 0.5;
        }

        70% {
            transform: translateY(-10px) translateX(-25px) scale(0.8);
            opacity: 0.4;
        }
    }

    .floating-circle-1 {
        animation: float1 8s ease-in-out infinite;
    }

    .floating-circle-2 {
        animation: float2 10s ease-in-out infinite 2s;
    }

    .floating-circle-3 {
        animation: float3 12s ease-in-out infinite 4s;
    }

    .floating-circle-4 {
        animation: float4 9s ease-in-out infinite 1s;
    }

    .floating-circle-5 {
        animation: float1 11s ease-in-out infinite 3s;
    }

    .floating-circle-6 {
        animation: float2 7s ease-in-out infinite 5s;
    }

    .train-hover-effect:hover {
        border-color: rgb(134, 239, 172);
        box-shadow: 0 0 20px rgba(134, 239, 172, 0.5);
    }
</style>

<!-- Back Button -->
<div class="absolute top-4 left-4 z-50">
    <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-2 px-4 py-2 bg-opacity-90 hover:bg-opacity-100 lg:text-white sm:text-green-700 md:text-green-700 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 backdrop-blur-sm">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span class="font-medium">Back to Home</span>
    </a>
</div>

<div class="flex min-h-screen bg-gray-100">
    <!-- Left side - Green Background with Train Image and Floating Circles (Hidden on md and below) -->
    <div class="hidden lg:block w-2/3 relative bg-gradient-to-b from-green-600 to-green-900 overflow-hidden">
        <!-- Floating circles -->
        <div class="floating-circle-1 absolute top-20 left-16 w-24 h-24 bg-green-300 rounded-full opacity-30 blur-sm"></div>
        <div class="floating-circle-2 absolute top-40 right-20 w-16 h-16 bg-green-200 rounded-full opacity-20 blur-sm"></div>
        <div class="floating-circle-3 absolute top-60 left-32 w-32 h-32 bg-green-400 rounded-full opacity-25 blur-sm"></div>
        <div class="floating-circle-4 absolute bottom-32 right-16 w-20 h-20 bg-green-300 rounded-full opacity-35 blur-sm"></div>
        <div class="floating-circle-5 absolute bottom-20 left-20 w-28 h-28 bg-green-200 rounded-full opacity-30 blur-sm"></div>
        <div class="floating-circle-6 absolute top-32 right-40 w-12 h-12 bg-green-400 rounded-full opacity-40 blur-sm"></div>

        <!-- Additional small circles for more depth -->
        <div class="floating-circle-1 absolute top-80 left-8 w-8 h-8 bg-green-300 rounded-full opacity-20 blur-sm"></div>
        <div class="floating-circle-3 absolute bottom-60 right-32 w-36 h-36 bg-green-400 rounded-full opacity-15 blur-sm"></div>
        <div class="floating-circle-2 absolute top-10 left-64 w-14 h-14 bg-green-200 rounded-full opacity-25 blur-sm"></div>

        <!-- Train image container -->
        <div class="absolute inset-0 flex items-center justify-center p-16">
            <div class="relative z-10 bg-gray-800 rounded-xl shadow-2xl overflow-hidden border-1 border-green-700 w-[850px] h-[950px] train-hover-effect transition-all duration-300">
                <img src="/auth7.png" alt="Metro Train" class="w-full h-full object-cover ">
            </div>
        </div>
    </div>

    <!-- Right side - Login Form -->
    <div class="w-full lg:w-1/3 flex flex-col justify-center items-center bg-white p-4 sm:p-6 lg:p-8 relative z-10 min-h-screen">
        <div class="max-w-xl w-full lg:border-0 border-2 border-gray-200 lg:shadow-none shadow-lg lg:rounded-none rounded-xl lg:p-0 p-6 sm:p-8 lg:bg-transparent bg-white">
            <div class="text-left mb-6 sm:mb-8">
                <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-green-800 mb-2">Welcome Back</h2>
                <p class="text-gray-600 text-lg sm:text-xl">Sign in to your account</p>
            </div>

            <form method="post" asp-action="Login" class="space-y-6 sm:space-y-8">
                @Html.AntiForgeryToken()

                <div class="mb-4 sm:mb-6">
                    <label for="email" class="block text-lg sm:text-xl font-semibold text-gray-700 mb-2 sm:mb-4">Email</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-xl">📧</span>
                        <input type="email"
                               id="email"
                               name="email"
                               class="w-full px-12 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-green-600 focus:ring-1 focus:ring-green-300 transition-all text-sm sm:text-base"
                               placeholder="Enter your email address"
                               required />
                    </div>
                </div>

                <div class="mb-4 sm:mb-6">
                    <label for="password" class="block text-lg sm:text-xl font-semibold text-gray-700 mb-2 sm:mb-4">Password</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-lg">🔒</span>
                        <input type="password"
                               id="password"
                               name="password"
                               class="w-full px-12 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-green-600 focus:ring-1 focus:ring-green-300 transition-all text-sm sm:text-base"
                               placeholder="Enter your password"
                               required />
                    </div>
                </div>

                <div class="mb-10">
                    <button type="submit"
                            class="w-full py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg text-lg sm:text-xl font-semibold hover:from-green-700 hover:to-green-800 transform hover:scale-[1.02] transition-all duration-200 shadow-lg">
                        Sign In
                    </button>
                </div>
            </form>

            <!-- Signup / forgot links -->
            <div class="text-center mt-6 sm:mt-8">
                <p class="text-sm sm:text-base">Don't have an account? <a href="@Url.Action("signup", "user")" class="text-green-700 font-semibold hover:underline">Create new account</a></p>
                <p class="mt-3 sm:mt-4 text-sm sm:text-base"><a href="@Url.Action("ForgotPassword", "Account")" class="text-green-700 font-semibold hover:underline">Forgot your password?</a></p>
            </div>
        </div>
    </div>
</div>