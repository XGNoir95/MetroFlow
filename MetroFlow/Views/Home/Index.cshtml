@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metro System - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles for the slider */
        #stations-track {
            transition: transform 0.5s ease-out;
        }

        .station-card {
            width: 520px;
            /* Increased width */
            height: 420px;
            /* Increased height */
        }

        /* Fix dropdown positioning */
        select {
            position: relative;
            z-index: 10;
        }

        /* Smooth transition for layout changes */
        .layout-transition {
            transition: all 0.3s ease-in-out;
        }

        /* Loading animation */
        .loading-spinner {
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }

        }

        /* Pulse animation for loading states */
        .pulse-loading {
            animation: pulse 1.5s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }

        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    @await Html.PartialAsync("_HeroSection")

    <!-- Planner Section -->
    @await Html.PartialAsync("_PlannerSection")

    <!-- Popular Metro Stations Section -->
    @await Html.PartialAsync("_PopularMetroSection")
</body>
</html>
