    <!-- JavaScript with All Fixes -->
    <script>
        let selectedPaymentMethod = null;

        // Check if user is logged in
        function isUserLoggedIn() {
            return @((User.Identity?.IsAuthenticated == true).ToString().ToLower());
        }

        // Function for card selection (clicking on card area)
        function selectPaymentMethod(methodType) {
            // Reset all cards to neutral state
            document.querySelectorAll('.payment-option').forEach(card => {
                card.classList.remove('border-green-600', 'shadow-lg');
                card.classList.add('border-gray-200');

                // Reset all icons and colors to neutral
                const icon = card.querySelector('.card-icon');
                const price = card.querySelector('.card-price');
                const button = card.querySelector('.card-button');
                const benefitsIcon = card.querySelector('.benefits-icon');
                const benefitChecks = card.querySelectorAll('.benefit-check');
                const selectionCheck = card.querySelector('.selection-check');
                const savings = card.querySelector('.card-savings');

                icon.className = 'card-icon bg-gray-100 p-3 rounded-full';
                icon.querySelector('i').className = icon.querySelector('i').className.replace('text-green-700', 'text-gray-600');
                price.className = 'card-price text-5xl font-bold text-gray-600 mb-2';

                // Reset button to disabled state
                button.disabled = true;
                button.className = 'card-button w-full bg-gray-400 text-gray-300 cursor-not-allowed font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2 shadow-lg text-lg mb-3';
                button.querySelector('span').textContent = 'Select Card First';

                benefitsIcon.className = 'benefits-icon w-7 h-7 mr-2 mt-0.5 text-gray-500';
                benefitChecks.forEach(check => {
                    check.className = 'benefit-check w-4 h-4 text-gray-400 mr-3 flex-shrink-0 mt-2';
                });
                selectionCheck.classList.add('hidden');
                if (savings) {
                    savings.className = 'card-savings ml-2 font-semibold bg-gray-100 px-4 py-1 rounded-full';
                }
            });

            // Apply green selection to clicked card
            const selectedCard = document.getElementById(`card-${methodType}`);
            selectedCard.classList.remove('border-gray-200');
            selectedCard.classList.add('border-green-600', 'shadow-lg');

            // Update selected card to green theme
            const icon = selectedCard.querySelector('.card-icon');
            const price = selectedCard.querySelector('.card-price');
            const button = selectedCard.querySelector('.card-button');
            const benefitsIcon = selectedCard.querySelector('.benefits-icon');
            const benefitChecks = selectedCard.querySelectorAll('.benefit-check');
            const selectionCheck = selectedCard.querySelector('.selection-check');
            const savings = selectedCard.querySelector('.card-savings');

            icon.className = 'card-icon bg-green-100 p-3 rounded-full';
            icon.querySelector('i').className = icon.querySelector('i').className.replace('text-gray-600', 'text-green-700');
            price.className = 'card-price text-5xl font-bold text-green-700 mb-2';

            // Enable button and update styling
            button.disabled = false;
            button.className = 'card-button w-full bg-green-600 hover:bg-green-800 text-white cursor-pointer font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2 shadow-lg transform hover:scale-[1.02] text-lg mb-3';

            // Update button text based on method type
            if (methodType === 'SingleJourney') {
                button.querySelector('span').textContent = 'Choose Single Journey Ticket';
            } else if (methodType === 'MRTPass') {
                button.querySelector('span').textContent = 'Choose MRT Pass';
            }

            benefitsIcon.className = 'benefits-icon w-7 h-7 mr-2 mt-0.5 text-green-500';
            benefitChecks.forEach(check => {
                check.className = 'benefit-check w-4 h-4 text-green-500 mr-3 flex-shrink-0 mt-2';
            });
            selectionCheck.classList.remove('hidden');
            if (savings) {
                savings.className = 'card-savings ml-2 text-green-600 font-semibold bg-green-50 px-4 py-1 rounded-full';
            }

            selectedPaymentMethod = methodType;
        }

                // Show login prompt modal
        function showLoginPrompt(message) {
            const modal = document.getElementById('loginPromptModal');
            const content = document.getElementById('loginPromptContent');
            const messageElement = document.getElementById('loginPromptMessage');

            messageElement.textContent = message;
            modal.classList.remove('hidden');

            // Trigger animation
            setTimeout(() => {
                content.classList.remove('scale-90', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);

            document.body.style.overflow = 'hidden';
        }

        // Hide login prompt modal
        function hideLoginPrompt() {
            const modal = document.getElementById('loginPromptModal');
            const content = document.getElementById('loginPromptContent');

            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-90', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }, 300);
        }

        // Login prompt modal event listeners
        document.addEventListener('DOMContentLoaded', function() {
            const closeLoginPrompt = document.getElementById('closeLoginPrompt');
            const loginPromptModal = document.getElementById('loginPromptModal');

            if (closeLoginPrompt) {
                closeLoginPrompt.addEventListener('click', hideLoginPrompt);
            }

            if (loginPromptModal) {
                loginPromptModal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        hideLoginPrompt();
                    }
                });
            }
        });


        // Function for button clicks (triggering actual actions)
        function handleButtonClick(methodType) {
            // Check if card is selected first
            if (selectedPaymentMethod !== methodType) {
                alert('Please select the card first by clicking on it.');
                return;
            }

            // Then trigger the appropriate action
            if (methodType === 'SingleJourney') {
                showSingleJourneyModal();
            } else if (methodType === 'MRTPass') {
                handleMrtPassClick();
            }
        }

        // Handle MRT Pass button click with authentication check
        function handleMrtPassClick() {
            if (isUserLoggedIn()) {
                // User is logged in, show the MRT Pass modal
                showMrtPassModal();
            } else {
                // User is not logged in, show professional login prompt
                showLoginPrompt("Please login to apply for your RAPID Pass and start saving on every metro journey.");
            }
        }


        function showSingleJourneyModal() {
            document.getElementById('singleJourneyModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeSingleJourneyModal() {
            document.getElementById('singleJourneyModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function showMrtPassModal() {
            document.getElementById('mrtPassModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeMrtPassModal() {
            document.getElementById('mrtPassModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Multiple fallback methods for PDF download
        function downloadForm() {
            try {
                // Method 1: Try direct wwwroot path
                const link = document.createElement('a');
                link.href = '/RAPID_Registration_Form.pdf';
                link.download = 'RAPID_Pass_Registration_Form.pdf';
                link.target = '_blank';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                // Show success message
                // setTimeout(() => {
                //     alert('Form download started! If download doesn\'t start automatically, please check your browser\'s download folder or visit any Metro station to get the form.');
                // }, 1000);

            } catch (error) {
                console.error('PDF download failed:', error);
                // Fallback: Try alternative paths
                downloadFormFallback();
            }
        }

        // Fallback download methods
        function downloadFormFallback() {
            const fallbackPaths = [
                '/files/RAPID_Registration_Form.pdf',
                '/downloads/RAPID_Registration_Form.pdf',
                '/assets/RAPID_Registration_Form.pdf',
                '/documents/RAPID_Registration_Form.pdf'
            ];

            let attempted = 0;

            function tryNextPath() {
                if (attempted < fallbackPaths.length) {
                    const link = document.createElement('a');
                    link.href = fallbackPaths[attempted];
                    link.download = 'RAPID_Pass_Registration_Form.pdf';
                    link.target = '_blank';

                    link.onerror = () => {
                        attempted++;
                        tryNextPath();
                    };

                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    attempted++;
                } else {
                    // All paths failed - show manual instructions
                    showDownloadInstructions();
                }
            }

            tryNextPath();
        }

        // Show download instructions as final fallback
        function showDownloadInstructions() {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4';
            modal.innerHTML = `
                <div class="bg-white rounded-2xl max-w-md w-full p-6">
                    <div class="text-center">
                        <div class="bg-yellow-100 rounded-full p-3 w-12 h-12 mx-auto mb-4 flex items-center justify-center">
                            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-800 mb-2">Form Download Instructions</h3>
                        <p class="text-gray-600 mb-4">
                            The registration form is temporarily unavailable for download. You can get the RAPID Pass registration form by:
                        </p>
                        <div class="text-left space-y-2 mb-6">
                            <div class="flex items-start space-x-2">
                                <span class="text-green-600 font-bold">1.</span>
                                <span class="text-sm">Visit any Metro Rail station ticket counter</span>
                            </div>
                            <div class="flex items-start space-x-2">
                                <span class="text-green-600 font-bold">2.</span>
                                <span class="text-sm">Ask for RAPID Pass registration form</span>
                            </div>
                            <div class="flex items-start space-x-2">
                                <span class="text-green-600 font-bold">3.</span>
                                <span class="text-sm">Contact: +88-02-55004800 for assistance</span>
                            </div>
                        </div>
                        <button onclick="this.parentElement.parentElement.parentElement.remove()"
                                class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors w-full">
                            Got It!
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
        }

        // Close modals when clicking outside
        document.getElementById('singleJourneyModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeSingleJourneyModal();
            }
        });

        document.getElementById('mrtPassModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeMrtPassModal();
            }
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeSingleJourneyModal();
                closeMrtPassModal();
            }
        });
    </script>
